<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if can? :read, @bug %>
      <%= link_to 'add new bug', new_bug_path, class:"btn btn-primary"  %>
      <% end %>
      <h2 class="text-cener py-5">Available bug</h2>
      <table class="table table-sm">
        <thead>
          <tr>
            <th scope="col">SN</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Project Title</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @bugs.each_with_index do |bug,index|%>
            <th scope="row"><%= index+1 %></th>
            <td><%= bug.title %></td>
            <td><%= bug.description %></td>
            <td><%= bug.project.title %></td>
            <% if can? :read, bug %>
            <td><%= link_to 'edit', edit_bug_path(bug), class: "text-success" %>
            <td>
              <%= link_to 'delete', bug, method: :delete, class: "text-danger", data: {confirm: "Are you sure you want to delete #{bug.title}?" } %>
            </td>
            <% end %>
          </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>