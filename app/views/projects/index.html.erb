<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-12">
    <%= link_to 'ADD PROJECT',new_project_path(), class:"btn btn-success float-right"%>
      <h2 class="text-cener py-5"> Project</h2>
      <table class="table table-sm">
        <thead>
          <tr>
            <th scope="col">S.N</th>
            <th scope="col">Title</th>
            <th colspan="2">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @projects.each_with_index do |project,index|%>
            <th scope="row"><%= index+1 %></th>
            <td><%= project.title %></td>
            <td><%= link_to 'edit', edit_project_path(project), class: "text-success" %>
            <td><%= link_to 'delete', project, method: :delete, data: {confirm: 'Are you sure?'}, class:"text-danger" %>
          </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
