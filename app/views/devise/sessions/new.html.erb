<div class="container p-5">
  <div class="row">
    <div class="col-md-12">
      <h2 class="ml-3">Log in</h2>
     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field col-md-6 py-2">
        <%= f.label :email %><br />
        <%= f.email_field :email,class:"form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field col-md-6 py-2">
        <%= f.label :password %><br />
        <%= f.password_field :password,class:"form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field py-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="actions col-md-6">
        <%= f.submit "Log in", class:"m-2 btn btn-primary btn-block" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

      <div>
      </div>
    </div>